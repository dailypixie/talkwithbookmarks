{
  "manifest_version": 3,
  "name": "Talk with Bookmarks",
  "version": "0.1.0",
  "description": "Download bookmarks and process them in chunks. Chat and summarize pages with AI.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:*;"
  },
  "action": {
    "default_title": "Talk with Bookmarks",
    "default_popup": "./pages/popup/popup.html"
  },
  "side_panel": {
    "default_path": "./pages/sidepanel/sidepanel.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "bookmarks",
    "offscreen",
    "sidePanel"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./pages/bubble/content.ts"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "./pages/offscreen/offscreen.html",
        "*.css",
        "*.js",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "./background/background.ts",
    "type": "module"
  }
}